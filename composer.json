{
  "name": "cleverington/stage-file-proxy",
  "description": "Get only the files you need from your production environment into your WordPress development environment.",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "repositories": [
		{
			"type":"composer",
			"url":"https://wpackagist.org",
			"only": [
				"wpackagist-plugin/*",
				"wpackagist-theme/*"
			]
		}
	],
  "authors": [
    {
      "name": "Alley",
      "email": "info@alley.com"
    },
    {
      "name": "Taoti",
      "email": "cleverington@taoti.com"
    }
  ],
  "require": {
    "php": "^8.0"
  },
  "require-dev": {
		"squizlabs/php_codesniffer": "^3.7",
		"wp-coding-standards/wpcs": "^3.0.1",
		"dealerdirect/phpcodesniffer-composer-installer": "^1.0",
		"phpcompatibility/php-compatibility": "*",
		"phpcompatibility/phpcompatibility-wp": "*",
		"behat/behat": "^3.14",
		"behat/mink": "^1.11",
		"dmore/behat-chrome-extension": "^1.4",
		"genesis/behat-fail-aid": "^3.7",
		"jcalderonzumba/mink-phantomjs-driver": "^0.3.3",
		"mikey179/vfsstream": "^1.6"
	},
  "config": {
    "lock": false,
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
